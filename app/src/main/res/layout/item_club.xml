<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:id="@+id/itemMain" >


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_club"
            android:layout_gravity="center"
            android:layout_width="@dimen/listview_image"
            android:layout_height="@dimen/listview_image"
            fresco:overlayImage="@color/overlay_image"
            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImage="@drawable/happy_disco"
            fresco:placeholderImageScaleType="focusCrop"/>

    </FrameLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_club_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="@dimen/listview_nameBarPadding"
            android:textColor="@color/primary_textList"
            android:textSize="@dimen/listview_nameBar"
            android:maxLines="2" />

        <TextView
            android:id="@+id/txt_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="@dimen/listview_nameBarPadding"
            android:textColor="@color/primary_textList"
            android:textSize="30dp"
            android:text="Bar-Antro"
            android:maxLines="2" />


    </LinearLayout>

</LinearLayout>