<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:id="@+id/itemMain" >

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_club"
            android:layout_gravity="center"
            android:layout_width="@dimen/listview_image"
            android:layout_height="200dp"
            fresco:overlayImage="@color/overlay_image"
            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImage="@drawable/happy_disco"
            fresco:placeholderImageScaleType="focusCrop"/>


        <TextView
            android:id="@+id/txt_club_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/primary_textList"
            android:textSize="@dimen/listview_nameBar"
            android:text="CHIDO"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:layout_alignParentTop="true"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/img_club"
            android:layout_toEndOf="@+id/img_club" />

        <TextView
            android:id="@+id/txt_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/primary_textList"
            android:textSize="18dp"
            android:text="Bar-Antro"
            android:layout_marginTop="-10dp"
            android:paddingLeft="15dp"
            android:maxLines="2"
            android:layout_below="@+id/txt_club_name"
            android:layout_toRightOf="@+id/img_club"
            android:layout_toEndOf="@+id/img_club" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:paddingLeft="15dp"
        android:id="@+id/imageView"
        android:background="@drawable/ic_group_white_48dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/button"
        android:layout_toRightOf="@+id/img_club"
        android:layout_toEndOf="@+id/img_club"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView2"
        android:background="@drawable/ic_group_white_48dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiero Ir"
        android:id="@+id/button"
        android:background="#8054386C"
        android:layout_alignBottom="@+id/img_club"
        android:layout_alignParentRight="true"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#ff4a8ab5"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="35 Estan AhÃ­"
        android:id="@+id/textView"
        android:layout_marginLeft="5dp"
        android:textColor="@color/primary_text"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="20 Quieren Ir"
        android:id="@+id/textView2"
        android:textColor="@color/primary_text"
        android:layout_alignTop="@+id/textView"
        android:layout_alignRight="@+id/button"
        android:layout_marginRight="8dp"
        android:layout_alignEnd="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiero Ir"
        android:id="@+id/button2"
        android:background="#8054386C"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#ff4a8ab5"
        android:layout_alignBottom="@+id/img_club"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_toRightOf="@+id/img_club"
        android:layout_toEndOf="@+id/img_club" />
</RelativeLayout>