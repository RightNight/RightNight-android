<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginBottom="0.5dp"
    android:orientation="vertical"
    android:id="@+id/itemMain">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_club"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:paddingLeft="16dp"
        fresco:overlayImage="@color/overlay_image"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@drawable/happy_disco"
        fresco:placeholderImageScaleType="focusCrop"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_club_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:padding="@dimen/standard_spacing"
        android:textColor="@color/secondary_text"
        android:textSize="52sp"
        android:maxLines="2"
        android:textStyle="bold|italic"
        android:layout_alignTop="@+id/img_club"
        android:layout_toRightOf="@+id/img_club"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/img_club" />

</RelativeLayout>
