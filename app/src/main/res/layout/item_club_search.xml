<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:background="#80000000"
    android:layout_marginBottom="10dp"
    android:id="@+id/itemMain" >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_club"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_width="@dimen/listview_image"
        android:layout_height="200dp"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@drawable/happy_disco"
        fresco:placeholderImageScaleType="focusCrop"/>

    <TextView
        android:id="@+id/txt_club_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/primary_textList"
        android:textSize="@dimen/listview_nameBar"
        android:text="CHIDO"
        android:lines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:paddingLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/txt_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/primary_textList"
        android:textSize="18dp"
        android:text="Bar-Antro"
        android:paddingLeft="11dp"
        android:maxLines="2"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/txt_club_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:paddingLeft="15dp"
        android:id="@+id/imageView"
        android:background="@drawable/ic_group_white_48dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/txt_type_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView2"
        android:background="@drawable/ic_group_white_48dp"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUIERO IR"
        android:gravity="center"
        android:id="@+id/btn_quiero"
        android:background="#8054386C"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#ff4a8ab5"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="35 Estan AhÃ­"
        android:id="@+id/txt_rightNow"
        android:textColor="@color/primary_text"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="20 Quieren Ir"
        android:id="@+id/txt_goingThere"
        android:textColor="@color/primary_text"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REVIEW"
        android:textAlignment="center"

        android:id="@+id/button2"
        android:background="#8054386C"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#ff4a8ab5"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:layout_toStartOf="@+id/button"
        android:layout_toLeftOf="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:digits="00.00"
        android:id="@+id/userVenueDistance"
        android:textColor="@color/primary_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>