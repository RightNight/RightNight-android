<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColorHint">#9e9e9e</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/primary_dark</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/primary</item>
    </style>

    <style name="AutoCompleteTextView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@android:color/white</item>
        <!-- If set to @null the cursor will be displayed using android:textColor -->
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">#9e9e9e</item>
        <item name="android:text">#9e9e9e</item>
        <item name="android:textColorHighlight">@color/primary</item>
        <item name="android:icon">@drawable/ic_search_white_48dp</item>
    </style>

</resources>
